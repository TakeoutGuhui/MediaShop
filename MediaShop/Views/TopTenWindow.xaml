<Window x:Class="MediaShop.Views.TopTenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Top ten products" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding}" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Product.Name}" />
                    <DataGridTextColumn Header="Sales" Binding="{Binding TotalItemsSold}" />
                    <DataGridTextColumn Header="Money generated" Binding="{Binding TotalIncome}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
