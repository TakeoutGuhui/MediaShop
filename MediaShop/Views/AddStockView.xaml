<Window x:Class="MediaShop.Views.AddStockView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding SelectedProduct.Name}" Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <StackPanel Margin="15" Orientation="Vertical">
        <TextBox PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Center" HorizontalContentAlignment="Right" Text="{Binding StockToAdd}" Width="50"/>
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Click="AddButtonClick" Content="Add"/>
            <Button Margin="10" Click="DeleteButtonClick" Content="Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
